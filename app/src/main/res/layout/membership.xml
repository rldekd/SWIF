<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_weight="1"
        android:background="#005C9F"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="SWIF 멤버십 구독"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="SWIF 멤버십으로 다양한 \n기능을 이용해보세요"
            android:textColor="#99FFFFFF"
            android:textSize="12sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="멤버십 혜택"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="22dp">
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/gray_strokecorner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고 제거"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="54dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="25dp"
            android:text="테마 변경"
            android:textColor="#000000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독권"
            android:textColor="#000000"
            android:textSize="18sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="월간 프리미엄 구독 \n 1,500원"
            android:background="@drawable/skyblue_roundcorner"
            android:textStyle="bold"
            android:textColor="#005C9F"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="25dp">

        </Button>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연간 프리미엄 구독 \n 15,000원"
            android:background="@drawable/pink_roundcorner"
            android:textStyle="bold"
            android:textColor="#F0707F"
            android:layout_marginTop="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:padding="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/yellow_roundcorner"
            android:textStyle="bold"
            android:text="SWIF 멤버십 구독하기" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/alarm"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_alarm" />

        <ImageButton
            android:id="@+id/rank"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_rank" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_home" />

        <ImageButton
            android:id="@+id/writebtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_post" />

        <ImageButton
            android:id="@+id/hambar"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_menu" />

    </LinearLayout>
</LinearLayout>