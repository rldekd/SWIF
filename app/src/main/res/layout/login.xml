<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="SWIF"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="60sp"
        />

    <EditText
        android:id="@+id/log_id"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_b"/>

    <EditText
        android:id="@+id/log_pass"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="패스워드"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_b"/>


    <Button
        android:id="@+id/login"
        android:layout_width="318dp"
        android:layout_height="47dp"
        android:background="@drawable/button_background"
        android:text="로그인"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="359dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/login_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="회원가입"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/login_idpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="아이디/비밀번호 찾기"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0D0D0"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OR"
            android:textAlignment="center"
            android:textSize="10sp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/roboto"/>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0D0D0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <ImageButton
            android:id="@+id/logkakao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            app:srcCompat="@drawable/kakaotalk_logo"
            android:padding="0sp"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/lognaver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/naver_logo"
            android:layout_marginLeft="30dp"
            android:padding="0sp"
            android:scaleType="centerCrop"/>
    </LinearLayout>



</LinearLayout>