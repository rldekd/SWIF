<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/inq_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="문의하기"
            android:textAlignment="center"
            android:textColor="#196CA8"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/myinq"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_b"
            android:gravity="center"
            android:text="문의함"
            android:textAlignment="center"
            android:textColor="#59000000"
            android:textSize="20dp">

        </TextView>


    </LinearLayout>

    <ImageView
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:src="@drawable/inq_click"></ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#7BC0FD" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:background="#4DEBEBEB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/rb"
                android:text="문의 유형"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/border3"
                android:drawableRight="@drawable/class_more"
                android:fontFamily="@font/roboto"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="14dp"
                android:paddingBottom="12dp"
                android:text="포인트 관련 문의"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/rb"
                android:text="내용"
                android:textColor="#000000"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/border3"
                android:fontFamily="@font/roboto"
                android:hint="제목을 입력하세요."
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="9dp"
                android:paddingBottom="12dp"
                android:textColor="#33000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/border3"
                android:fontFamily="@font/roboto"
                android:hint="내용을 입력하세요"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="9dp"
                android:paddingBottom="12dp"
                android:textColor="#33000000"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/rb"
                android:text="사진 추가"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="18dp"
                android:background="#99E8E5E5"
                android:src="@drawable/add_pic_bg">

            </ImageButton>

            <Button
                android:layout_width="318dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/rb"
                android:text="글쓰기"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#B3000000"/>

    <LinearLayout

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_noti"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_alarm"/>

        <ImageButton
            android:id="@+id/btn_rank"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_rank"/>

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_home" />

        <ImageButton
            android:id="@+id/btn_write"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_post" />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_menu" />


    </LinearLayout>

</LinearLayout>