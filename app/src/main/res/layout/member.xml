<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/swif_icon_round"
            android:gravity="center"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/mem_id"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/mem_pass"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_id"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/mem_pass2"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_id"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                /* 이용약관 */


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="약관 동의 (필수)"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/check01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="SWIF 이용약관"
                    android:onClick="ButtonClick1"
                    tools:ignore="MissingConstraints,OnClick"/>


                <CheckBox
                    android:id="@+id/check02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text="개인정보 처리방침"
                    android:onClick="ButtonClick2"
                    tools:ignore="MissingConstraints, Onclick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/check_ok_01"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="62dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/gray_roundcorner"
                    android:textSize="10sp"
                    android:text="SWIF 이용약관 확인"/>

                <Button
                    android:id="@+id/check_ok_02"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/gray_roundcorner"
                    android:textSize="10sp"
                    android:text="개인정보 처리 방 확인"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:onClick="mem_login"
            android:layout_width="318dp"
            android:layout_height="47dp"
            android:background="@drawable/button_background"
            android:text="확인"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="359dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            tools:ignore="OnClick" />


    </LinearLayout>

</ScrollView>